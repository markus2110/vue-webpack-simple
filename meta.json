{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },

    "less": {
       "type": "confirm",
       "message": "Use less?",
       "default": true
    },    
    
    "bootstrap": {
       "type": "confirm",
       "message": "install Bootstrap?",
       "default": false
    },    
    
    "fontawesome": {
       "type": "confirm",
       "message": "install Font-Awesome?",
       "default": false
    },
    
    "license": {
      "type": "string",
      "label": "License",
      "default": "MIT"
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  npm install\n  npm run dev{{else}}To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev{{/inPlace}}"
}
